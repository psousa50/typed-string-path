{
    "extends": [
      "tslint:recommended"
    ],
    "rules": {
      "max-line-length": {
        "options": { "limit": 150 },
        "severity": "warn"
      },
      "arrow-parens": [false],
      "no-console": [false],
      "no-default-export": true,
      "semicolon": [true, "never"],
      "triple-equals": [true, "allow-undefined-check"],
      "interface-name": [false],
      "interface-over-type-literal": false,
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "always",
            "typeLiterals": "ignore"
          }
        }
      ]
    }
  }
